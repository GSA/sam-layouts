{
  "name": "layouts",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "layouts/src",
  "prefix": "sam-layouts",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "layouts/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "layouts/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "layouts/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "layouts/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "layouts/**/*.ts",
          "layouts/**/*.html",
          "layouts/package.json"
        ]
      }
    }
  }
}
