{
  "name": "sam-layouts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "sam-layouts",
  "sourceRoot": "apps/sam-layouts/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/sam-layouts",
        "index": "apps/sam-layouts/src/index.html",
        "main": "apps/sam-layouts/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/sam-layouts/tsconfig.app.json",
        "assets": [
          "apps/sam-layouts/src/favicon.ico",
          "apps/sam-layouts/src/assets",
          {
            "glob": "**/*",
            "input": "./node_modules/@uswds/uswds/dist/fonts/",
            "output": "/assets/uswds/fonts"
          },
          {
            "glob": "**/*",
            "input": "./node_modules/@uswds/uswds/dist/img/",
            "output": "/assets/uswds/img"
          },
          {
            "glob": "**/*",
            "input": "./node_modules/@gsa-sam/sam-styles/packages/images",
            "output": "/assets/uswds/img"
          }
        ],
        "stylePreprocessorOptions": {
          "includePaths": [
            "./node_modules/@uswds/uswds/packages",
            "./node_modules/@gsa-sam/sam-styles"
          ]
        },
        "styles": ["apps/sam-layouts/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "sam-layouts:build:production"
        },
        "development": {
          "browserTarget": "sam-layouts:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "sam-layouts:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/sam-layouts/**/*.ts",
          "apps/sam-layouts/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/sam-layouts/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/sam-layouts/.storybook",
        "browserTarget": "sam-layouts:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "docs",
        "configDir": "apps/sam-layouts/.storybook",
        "browserTarget": "sam-layouts:build",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  }
}
